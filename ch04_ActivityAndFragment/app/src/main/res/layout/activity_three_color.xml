<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThreeColorActivity">

    <FrameLayout
        android:id="@+id/fragmentFrame"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#FFEB3B"
        app:layout_constraintTop_toTopOf="parent"
    />

    <Button
        android:id="@+id/button_red_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Red Fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        />

    <Button
        android:id="@+id/button_green_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Green Fragment"
        app:layout_constraintBottom_toTopOf="@id/button_red_fragment"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/button_blue_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blue Fragment"
        app:layout_constraintBottom_toTopOf="@id/button_green_fragment"
        android:layout_margin="10dp" />
</androidx.constraintlayout.widget.ConstraintLayout>